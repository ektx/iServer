<!DOCTYPE html>
<html lang="zh">
	<%- include('parts/head', {host: host, title: usrInfo.act, css: ['/server/css/setting.css']}) %>
<body>
	
	<%- include('parts/header', {host: host, usr: usrInfo, title: '个人中心'}) %>

	<section class="main-body">


		<section class="content">

			<ul class="setting-tag">
				<li>
					<a href="/set/profile">个人信息</a>
				</li>
				<li class="current"><a href="/set/passwd">密码修改</a></li>
			</ul>
			
			<form id="passwd" class="upload-form" method="post" enctype="multipart/form-data">

				<dl>
					<dt>旧密码</dt>
					<dd>
						<input type="password" name="oldpwd" autofocus="">
						<span class="err-info"></span>
					</dd>
				</dl>

				<dl>
					<dt>新密码</dt>
					<dd>
						<input type="password" name="newpwd" value="">
						<span class="err-info"></span>
					</dd>
				</dl>

				<dl>
					<dt>确认新密码</dt>
					<dd>
						<input type="password" name="newpwd2" value="">
						<span class="err-info"></span>
					</dd>
				</dl>

				<dl>
					<dd>
						<button class="btn middle-btn green-btn" type="submit">
							<b><i></i></b>
							<span>保存修改</span>
						</button>
					</dd>
				</dl>
			</form>

		</section>

	</section>

	<script src="<%= host %>/server/js/jquery-3.1.0.min.js"></script>
	<script src="<%= host %>/server/js/main.js"></script>
	<script src="<%= host %>/server/js/setting.js"></script>
	
</body>
</html>